{
  "compilerOptions": {
    "types": ["vitest/globals"],

    "target": "es2016",
    "jsx": "react-jsx",

    "module": "es2022",
    "moduleResolution": "nodenext",

    "baseUrl": "./src/",
    "paths": {
      "@components/*": ["components/*"],
      "@interfaces/*": ["interfaces/*"],
      "@enums/*": ["enums/*"],
      "@tests/*": ["../tests/*"]
    },

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  }
}
